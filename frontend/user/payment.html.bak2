    <!-- Header - Hidden on tablet/mobile -->
    <header>
        <div class="logo-container">
            <img src="../../assets/logo.png" alt="WaterBill NG">
            <h1>WaterBill NG</h1>
        </div>
        
        <button class="hamburger" id="menu-btn">
